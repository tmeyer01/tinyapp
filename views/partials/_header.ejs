<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!-- <span class="navbar-text"></span> -->
      <!-- </span>  -->
    </div>
    <form method="POST" action="/login" class="form-inline my-2 my-lg-0">
      <%if (username) { %>
        <label>Logged in as: <%= username %></label>
        <% } else if (!username) { %>
        <input name="username" placeholder="Username" />
        <button class="btn btn-outline-dark" type="submit">Login</button>
        <%} %>  
    </form>
    <form method="POST" action="/logout" class="form-inline my-2 my-lg-0">
        <%if (username) { %>
        <button class="btn btn-outline-dark" type="submit">Logout</button>
        <% } %>  
    </form>
  </nav>

  
</form>




</header>